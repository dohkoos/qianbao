<div id="header">
  <%= link_to 'Home', root_path %>
  <% if logged_in? %>
    <%= link_to 'All entries', entries_path %>
    <strong>You are logged in as <%= current_user.login %></strong>
    <%= link_to 'Logout', logout_path %>
  <% else %>
    <%= link_to 'Login', login_path %>
    <%= link_to 'Sign Up', signup_path %>
  <% end %>
</div>
