<h1>New entry</h1>

<% form_for(@entry) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label t(:effective_date) %><br />
    <%= f.date_select :effective_date %>
  </p>

  <p>
    <%= f.label t(:amount) %><br />
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.label t(:tags) %><br />
    <%= f.text_field :tags %>
  </p>
  <p>
    <%= f.label t(:comment) %><br />
    <%= f.text_area :comment %>
  </p>
  <p>
    <%= f.submit t(:create) %>
  </p>
<% end %>

<%= link_to t(:back), entries_path %>
